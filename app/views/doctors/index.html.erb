<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Photo</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Specialty</th>
      <th>Med school</th>
      <th>Grad date</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.last_name %></td>
        <td><%= doctor.first_name %></td>
        <td><%= doctor.photo %></td>
        <td><%= doctor.phone %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.specialty %></td>
        <td><%= doctor.med_school %></td>
        <td><%= doctor.grad_date %></td>
        <td><%= doctor.bio %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

